<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="customTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Customize your dark theme here. -->

        <!-- Uncomment and set the primary color for the dark theme -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <!-- Set the window background color to black for the dark theme -->
        <item name="android:windowBackground">@color/black</item>
    </style>

    <!-- Style for the custom floating action button -->
    <style name="customFloatingButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <!-- Set the background color for the floating action button -->
        <item name="background">@color/colorAccent</item>
        <!-- Set the icon color for the floating action button -->
        <item name="color"> @color/white </item>
    </style>
</resources>
